<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/TextView_register_user_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/profile_user_addres"
            android:textColor="@color/primary_color"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/info_linear_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextView_register_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="98dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/register_name"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TextView_register_user_lastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/register_lastname"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/register_name1_hint"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/register_lastname1_hint"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="170dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_spinner"
                android:padding="12dp"
                android:scrollbarSize="22dp"
                android:textAlignment="center"/>

            <Spinner
                android:layout_width="170dp"
                android:layout_marginEnd="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_spinner"
                android:padding="12dp"
                android:scrollbarSize="22dp"
                android:textAlignment="center"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout_register_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/TextView_register_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/profile_user_street"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/profile_user_street"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_profile_user_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/TextView_profile_usermail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/profile_user_number"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/profile_user_number"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_profile_user_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/TextView_profile_user_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/profile_user_housenumber"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/profile_user_housenumber"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp"
            android:gravity="left">

            <CheckBox
                android:id="@+id/checkbox_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/checkbox_color"
                android:checked="false"
                android:layout_gravity=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_favorite_address"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/primary_color"/>

        </LinearLayout>

        <Button
            android:layout_gravity="center_vertical|center_horizontal"
            android:id="@+id/button_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_profile_map"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/quicksand"
            android:text="@string/profile_map_button"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingTop="0dp"
            android:paddingBottom="3dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"/>
    </LinearLayout>
</ScrollView>
