<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView_register_user_wellcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal"
            android:text="@string/register_wellcome"
            android:textColor="@color/primary_color"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView_register_user_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="-4sp"
            android:text="@string/register_drop"
            android:textColor="@color/primary_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextView_register_user_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/quicksand"
            android:text="@string/register_next_shipping_info"
            android:textColor="@color/primary_color"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_region"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_spinner"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:scrollbarSize="22dp"
                android:textAlignment="center" />

            <Spinner
                android:id="@+id/spinner_comuna"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_border_spinner"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:scrollbarSize="22dp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_register_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_register_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/register_next_address"
                android:textColor="@color/primary_color"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edittext_adress"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand_medium"
                android:hint="@string/register_next_address_hint"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:gravity="left">

            <CheckBox
                android:id="@+id/checkbox_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:buttonTint="@color/checkbox_color"
                android:checked="false"
                android:layout_gravity=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_terms_n_conditions"
                android:textSize="16sp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/primary_color"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_register_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/round_standar"
            android:fontFamily="@font/quicksand"
            android:paddingStart="90dp"
            android:paddingTop="5dp"
            android:paddingEnd="90dp"
            android:paddingBottom="5dp"
            android:text="@string/register_create_act"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
