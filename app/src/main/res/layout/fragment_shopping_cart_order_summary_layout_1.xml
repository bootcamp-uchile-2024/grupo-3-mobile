<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainAppApproach.MainAppCategoriesActivity">

    <!-- Comienzo de Header -->
    <View
        android:id="@+id/app_upper_banner"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#1A4756"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/activity_main_layout_1"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/personal_magnifying"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_upper_banner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:src="@drawable/search" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/personal_magnifying"
            android:fontFamily="@font/quicksand_medium"
            android:hint="@string/search_hint"
            android:textColor="@color/quaternary_grey"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/camera" />

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:id="@+id/scroll_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_layout_1"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_box"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Título -->
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Tus datos están correctos?"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:layout_marginBottom="20dp"/>

            <!-- Correo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand"
                android:text="Correo"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand"
                android:hint="juan.perez.123@gmail.com"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:text="Nombre"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand"
                android:hint="Juan"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- Apellido -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:text="Apellido"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shopping_edittext"
                android:fontFamily="@font/quicksand"
                android:focusable="false"
                android:hint="Perez"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- RUT -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:text="RUT"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shopping_edittext"
                android:focusable="false"
                android:fontFamily="@font/quicksand"
                android:hint="11111111-1"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>

            <!-- Teléfono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand"
                android:text="Teléfono"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_shopping_edittext"
                android:focusable="false"
                android:fontFamily="@font/quicksand"
                android:hint="912345678"
                android:padding="10dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Modificar información -->
    <TextView
        android:id="@+id/TextViewInformation"
        app:layout_constraintTop_toBottomOf="@+id/scroll_shopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Modificar información"
        android:textColor="@color/primary_color"
        android:fontFamily="@font/quicksand"
        android:textSize="14sp" />

    <!-- Botón Siguiente -->
    <Button
        android:gravity="center_horizontal"
        android:id="@+id/btn_siguiente"
        android:layout_width="200dp"
        android:layout_height="46dp"
        app:layout_constraintTop_toBottomOf="@+id/TextViewInformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_shopping_button"
        android:padding="10dp"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand"
        android:textSize="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Fin de Header -->

