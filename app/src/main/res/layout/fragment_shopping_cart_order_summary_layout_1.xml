<?xml version="1.0" encoding="utf-8"?>
<!-- Root container that will hold all our layout elements -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.mainAppApproach.MainAppCategoriesActivity">

    <!-- Upper banner section - This stays fixed at the top -->
    <View
        android:id="@+id/app_upper_banner"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:background="#1A4756"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search bar section - This also stays fixed below the banner -->

    <!-- Main ScrollView that will contain all content below the search bar -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_layout_1">

        <!-- Container for all scrollable content -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Form container -->
            <LinearLayout
                android:id="@+id/activity_main_layout_1"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/personal_magnifying"
                android:elevation="10dp"
                android:orientation="horizontal"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="30dp">

                <!-- Search icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:src="@drawable/search" />

                <!-- Search EditText -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/personal_magnifying"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="@string/search_hint"
                    android:textColor="@color/quaternary_grey"
                    android:textSize="18sp" />

                <!-- Camera icon -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/camera" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/border_box"
                android:orientation="vertical"
                android:padding="30dp"
                app:layout_constraintTop_toBottomOf="@id/activity_main_layout_1"
                tools:layout_editor_absoluteX="16dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/quicksand"
                    android:text="¿Tus datos están correctos?"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Email section -->
                <TextView
                    android:id="@+id/email_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:editable="false"
                    android:fontFamily="@font/quicksand"
                    android:text="Correo"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_text_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_shopping_edittext"
                    android:editable="true"
                    android:fontFamily="@font/quicksand"
                    android:hint="juan.perez.123@gmail.com"
                    android:padding="10dp" />

                <!-- Name section -->
                <TextView
                    android:id="@+id/name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:editable="false"
                    android:fontFamily="@font/quicksand"
                    android:text="Nombre"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_shopping_edittext"
                    android:editable="true"
                    android:fontFamily="@font/quicksand"
                    android:hint="Juan"
                    android:padding="10dp" />

                <!-- Last name section -->
                <TextView
                    android:id="@+id/lastname_text_vie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:editable="false"
                    android:fontFamily="@font/quicksand"
                    android:text="Apellido"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_text_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_shopping_edittext"
                    android:editable="true"
                    android:focusable="auto"
                    android:fontFamily="@font/quicksand"
                    android:hint="Perez"
                    android:padding="10dp" />

                <!-- RUT section -->
                <TextView
                    android:id="@+id/rut_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:editable="false"
                    android:fontFamily="@font/quicksand"
                    android:text="RUT"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_text_rut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_shopping_edittext"
                    android:editable="true"
                    android:focusable="auto"
                    android:fontFamily="@font/quicksand"
                    android:hint="11111111-1"
                    android:padding="10dp" />

                <!-- Phone section -->
                <TextView
                    android:id="@+id/phone_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/quicksand"
                    android:text="Teléfono"
                    android:textColor="@color/primary_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_shopping_edittext"
                    android:editable="true"
                    android:focusable="auto"
                    android:fontFamily="@font/quicksand"
                    android:hint="912345678"
                    android:padding="10dp" />

            </LinearLayout>

            <!-- Modify information text -->
            <TextView
                android:id="@+id/text_view_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/quicksand"
                android:gravity="center"
                android:text="Modificar información"
                android:textColor="@color/primary_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/form_container" />

            <!-- Next button -->
            <Button
                android:id="@+id/btn_siguiente"
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_shopping_button"
                android:fontFamily="@font/quicksand"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Siguiente"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_information" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>